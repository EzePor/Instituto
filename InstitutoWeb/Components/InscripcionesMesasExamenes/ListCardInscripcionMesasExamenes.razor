<div class="container my-4">
    <div class="row">
        
            @foreach (var entity in Materias)
            {
                <div class="col-12 col-md-6 col-lg-3 mb-4">
                    <div class="card text-center">
                        <div class="card-header">
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">@entity.Nombre</h5>
                            <p class="card-text"></p>
                       
                        </div>
                        <div class="card-footer text-body-secondary">
                        <InputCheckbox @bind-Value="entity.Eliminado" Label="Seleccionar"  />
                        </div>
                    </div>
                </div>
            }
        <button class="btn btn-primary" @onclick="()=>HandleFinalizarInscripcion(Materias)">Seleccionar</button>
    </div>
</div>



@code {
    [Parameter]
    public List<Materia> Materias { get; set; }


    [Parameter]
    public EventCallback<List<Materia>> OnFinalizarInscripcion { get; set; }

    private void HandleFinalizarInscripcion(List<Materia> listSelected)
    {
        OnFinalizarInscripcion.InvokeAsync(listSelected.Where(e=>e.Eliminado==true).ToList());
    }
}
